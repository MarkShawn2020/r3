{
  "name": "r3-scaffold",
  "version": "0.1.0",
  "description": "R3 (River 3) - A super scaffold for independent developers, inspired by the Three Rivers Source",
  "keywords": [
    "scaffold",
    "cli",
    "boilerplate",
    "generator",
    "r3",
    "river",
    "indie-developer",
    "framework"
  ],
  "author": "Mark",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "r3": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli/index.js",
    "dev": "tsx watch src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "demo": "tsx src/demo-logo.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run build",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/validate-npm-package-name": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mark/r3-scaffold"
  },
  "bugs": {
    "url": "https://github.com/mark/r3-scaffold/issues"
  },
  "homepage": "https://github.com/mark/r3-scaffold#readme"
}